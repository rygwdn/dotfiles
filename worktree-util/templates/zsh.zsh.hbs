{{#if init_navigate}}
# Navigation function
{{navigate_cmd}} () {
    local paths
    paths=($({{exe_path}} nav "$@"))
    if [[ ${#paths[@]} -gt 0 ]]; then
        cd ${paths[@]}
    fi
}
{{/if}}

{{#if init_code}}
# Code function
{{code_cmd}} () {
    local paths
    paths=($({{exe_path}} nav --multi "$@"))
    if [[ ${#paths[@]} -gt 0 ]]; then
        code ${paths[@]}
    fi
}
{{/if}}
