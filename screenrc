#termcapinfo xterm ti@:te@

shelltitle "$ |bash"
multiuser on
defscrollback 30000
autodetach on
vbell on

bind j focus down
bind k focus up

# PgUp PgDown scrolls
# bindkey -k kP copy

# Support alternate screens so that, for example, when you
# quit out of vi, the display is redrawn as it was before vi
# redrew the full screen.
altscreen on

# message to display when monitor triggers
activity "%c activity -> %n%f %t"

bind b eval writebuf 'exec /bin/sh -c "echo >> /tmp/screen-exchange; xsel -i -b < /tmp/screen-exchange"'

screen -t zsh 1
screen -t todo 0 vim "$HOME/todo.otl"
