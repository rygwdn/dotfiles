hardstatus string '%{= g}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}(%{W}%n*%f %t%?(%u)%?%{= R})%{= w}%?%+Lw%?%?%= %{g}][ %{B}%Y-%m-%d %{W}%c %{g}]'
startup_message off

