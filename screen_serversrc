hardstatus alwayslastline
hardstatus string '%{= g}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}(%{W}%n*%f %t%?(%u)%?%{= R})%{= w}%?%+Lw%?%?%= %{g}][ %{B}%Y-%m-%d %{W}%c %{g}]'
startup_message off

multiuser on
defscrollback 30000
autodetach on
vbell on

bind j focus down
bind k focus up

# Support alternate screens so that, for example, when you
# quit out of vi, the display is redrawn as it was before vi
# redrew the full screen.
altscreen on

# message to display when monitor triggers
activity "%c activity -> %n%f %t"

screen -t bananajour 0 /var/lib/gems/1.8/bin/bananajour
screen -t synergy 1 mucsyn
